<launch>
  <!-- Start the robotâ€™s base drivers -->
  <include file="$(find stingray_camera)/launch/triton.launch" />

  <!-- Start gmapping -->
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_frame"  value="map"/>
    <param name="delta" value="0.05"/>
    <param name="maxUrange" value="3.5"/>
    <rosparam command="load" file="$(find triton_mapping)/config/gmapping_params.yaml" />
  </node>

  <!-- RViz for map visualization -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find triton_mapping)/rviz/mapping.rviz" required="true"/>
</launch>
